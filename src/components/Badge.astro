---
const { color = "primary", title = "" }: BadgeProps = Astro.props;

interface BadgeProps {
	color?: "primary" | "secondary";
	title?: string;
}

const colors = {
	primary: "bg-accent/10 text-accent ring-1 ring-accent/30",
	secondary: "bg-secondary-color/10 text-secondary ring-1 ring-secondary-color/30",
};
---

<span class={`inline-flex not-prose items-center mb-4 rounded-full px-3 py-1 text-sm font-medium ${colors[color]}`}
	>{title}</span
>
