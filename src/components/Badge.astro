---
const { color = "primary", title = "" }: BadgeProps = Astro.props;

interface BadgeProps {
	color?: "primary" | "secondary";
	title?: string;
}
---

<span 
	class:list={[
		"badge inline-flex not-prose items-center mb-3 rounded-lg px-3 py-1 text-xs font-bold uppercase tracking-wider",
		color === "primary" && "badge-primary",
		color === "secondary" && "badge-secondary"
	]}
>
	{title}
</span>

<style>
	.badge-primary { 
		background-color: var(--color-accent-subtle); 
		color: var(--color-accent);
	}
	.badge-secondary { 
		background-color: var(--color-secondary-subtle); 
		color: var(--color-secondary);
	}
</style>
