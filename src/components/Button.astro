---
interface Props {
	color?: "primary" | "secondary" | "outline";
	url?: string;
	newtab?: boolean;
	As?: "a" | "button";
	class?: string;
}

const { color = "primary", url = "", newtab = false, As = "a", class: className = "", ...props } = Astro.props;
---

<As
	class:list={[
		"not-prose button",
		`button-${color}`,
		className
	]}
	href={As === "a" ? url : undefined}
	target={As === "a" && newtab ? "_blank" : undefined}
	rel={As === "a" && newtab ? "noopener noreferrer" : undefined}
	{...props}
>
	<slot />
</As>
