---
interface Props {
	variant?: "primary" | "cta" | "outline" | "ghost";
	size?: "sm" | "md" | "lg";
	url?: string;
	newtab?: boolean;
	As?: "a" | "button";
	class?: string;
}

const { 
	variant = "primary", 
	size = "md",
	url = "", 
	newtab = false, 
	As = "a", 
	class: className = "", 
	...props 
} = Astro.props;

const sizeClass = size === "sm" ? "button-sm" : size === "lg" ? "button-lg" : "";
---

<As
	class:list={[
		"not-prose button",
		`button-${variant}`,
		sizeClass,
		className
	]}
	href={As === "a" ? url : undefined}
	target={As === "a" && newtab ? "_blank" : undefined}
	rel={As === "a" && newtab ? "noopener noreferrer" : undefined}
	{...props}
>
	<slot />
</As>
