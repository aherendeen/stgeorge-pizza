---
import { Icon } from "astro-icon/components";
import { phone } from "../data/config";
---

<a
  href={phone.href}
  class="call-us-btn not-prose flex items-center gap-x-3 transition-transform duration-200 hover:-translate-y-0.5"
>
  <div class="call-icon rounded-lg p-2.5">
    <Icon name="lucide:phone" class="size-5" aria-hidden="true" />
  </div>
  <div>
    <p class="text-xs text-muted">Call us</p>
    <span class="text-primary font-semibold">{phone.label}</span>
  </div>
</a>

<style>
  .call-icon {
    background-color: var(--color-accent);
    color: var(--color-surface-950);
  }
</style>
