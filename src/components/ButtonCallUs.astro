---
import { Icon } from "astro-icon/components";
import { phone } from "../data/config";
---

<a
  href={phone.href}
  class="not-prose flex items-center gap-x-3 hover:-translate-y-1 hover:-rotate-1 transition duration-300"
>
  <div class="bg-accent rounded-full p-2.5">
    <Icon name="lucide:phone" class="size-6 text-white" />
  </div>
  <div>
    <p class="text-sm text-muted">Call us</p>
    <span class="text-primary font-bold text-base/6">{phone.label}</span>
  </div>
</a>
