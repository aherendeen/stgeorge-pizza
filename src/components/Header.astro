---
import { Icon } from "astro-icon/components";
import { menuMain } from "../data/menus.js";
import ThemeToggle from "./ThemeToggle.astro";

const rmTrailingSlash = (path: string): string => {
  return path.endsWith("/") && path.length > 1
    ? path.slice(0, path.length - 1)
    : path;
};

const pathname = rmTrailingSlash(Astro.url.pathname);
---

<header class="header">
  <div class="container py-3">
    <nav class="header-nav" aria-label="Global">
      <!-- Logo -->
      <a href="/" class="header-logo">
        <span class="header-logo-text">
          St. George <span class="header-logo-accent">Pizza</span>
        </span>
      </a>
      
      <!-- Mobile Controls -->
      <div class="header-mobile-controls">
        <a href="/contact" class="header-phone-mobile" aria-label="Contact us">
          <Icon name="lucide:phone" class="size-5" />
        </a>
        <ThemeToggle />
        <button
          type="button"
          class="header-menu-btn"
          aria-label="Open main menu"
          aria-expanded="false"
        >
          <Icon name="lucide:menu" class="size-6" aria-hidden="true" />
        </button>
      </div>
      
      <!-- Desktop Navigation -->
      <div class="header-desktop-nav">
        {
          menuMain.map((item) => (
            <a
              href={item.url}
              class:list={[
                "header-nav-link",
                item.highlighted && "header-nav-cta",
                pathname === item.url && !item.highlighted && "header-nav-active"
              ]}
            >
              {item.name}
            </a>
          ))
        }
        <div class="header-divider">
          <ThemeToggle />
        </div>
      </div>
    </nav>
    
    <!-- Mobile Menu Overlay -->
    <div class="header-mobile-overlay lg:hidden">
      <!-- Backdrop -->
      <div class="header-mobile-backdrop"></div>
      
      <!-- Panel -->
      <div class="header-mobile-panel">
        <!-- Panel Header -->
        <div class="header-mobile-header">
          <a href="/" class="header-logo">
            <span class="header-logo-text">
              St. George <span class="header-logo-accent">Pizza</span>
            </span>
          </a>
          <button
            type="button"
            class="header-close-btn"
            aria-label="Close menu"
          >
            <Icon name="lucide:x" class="size-6" aria-hidden="true" />
          </button>
        </div>
        
        <!-- Panel Nav -->
        <nav class="header-mobile-nav">
          {
            menuMain.map((item) => (
              <a
                href={item.url}
                class:list={[
                  "header-mobile-link",
                  item.highlighted && "header-mobile-cta",
                  pathname === item.url && !item.highlighted && "header-mobile-active"
                ]}
              >
                {item.name}
              </a>
            ))
          }
        </nav>
        
        <!-- Panel Footer -->
        <div class="header-mobile-footer">
          <a href="/contact" class="header-mobile-phone">
            <Icon name="lucide:phone" class="size-5" />
            <span>Contact Us</span>
          </a>
        </div>
      </div>
    </div>
  </div>
</header>

<style>
  .header {
    position: sticky;
    top: 0;
    z-index: 50;
    width: 100%;
    background-color: color-mix(in srgb, var(--color-bg-primary) 95%, transparent);
    border-bottom: 1px solid var(--color-border);
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
  }
  
  .header-nav {
    display: flex;
    align-items: center;
    justify-content: space-between;
  }
  
  .header-logo {
    display: flex;
    align-items: center;
    text-decoration: none;
  }
  
  .header-logo-text {
    font-weight: 700;
    font-size: 1.25rem;
    color: var(--color-text-primary);
  }
  
  @media (min-width: 640px) {
    .header-logo-text {
      font-size: 1.5rem;
    }
  }
  
  .header-logo-accent {
    color: var(--color-cta);
  }
  
  .header-mobile-controls {
    display: flex;
    align-items: center;
    gap: 0.25rem;
  }
  
  @media (min-width: 1024px) {
    .header-mobile-controls {
      display: none;
    }
  }
  
  .header-phone-mobile {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 0.5rem;
    border-radius: 0.5rem;
    color: var(--color-cta);
    transition: all 0.2s ease;
  }
  
  .header-phone-mobile:hover {
    background-color: var(--color-cta-bg);
  }
  
  .header-menu-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 0.5rem;
    border-radius: 0.5rem;
    color: var(--color-text-secondary);
    transition: all 0.2s ease;
    background: transparent;
    border: none;
    cursor: pointer;
  }
  
  .header-menu-btn:hover {
    color: var(--color-text-primary);
    background-color: var(--color-bg-tertiary);
  }
  
  .header-desktop-nav {
    display: none;
    align-items: center;
    gap: 0.25rem;
  }
  
  @media (min-width: 1024px) {
    .header-desktop-nav {
      display: flex;
    }
  }
  
  .header-nav-link {
    padding: 0.5rem 1rem;
    border-radius: 0.5rem;
    font-size: 0.875rem;
    font-weight: 600;
    color: var(--color-text-secondary);
    text-decoration: none;
    transition: all 0.2s ease;
  }
  
  .header-nav-link:hover {
    color: var(--color-text-primary);
    background-color: var(--color-bg-tertiary);
  }
  
  .header-nav-cta {
    background-color: var(--color-cta);
    color: #ffffff !important;
  }
  
  .header-nav-cta:hover {
    background-color: var(--color-cta-hover);
    color: #ffffff !important;
  }
  
  .header-nav-active {
    color: var(--color-accent);
    font-weight: 700;
  }
  
  .header-divider {
    margin-left: 0.5rem;
    padding-left: 0.75rem;
    border-left: 1px solid var(--color-border);
  }
  
  .header-mobile-backdrop {
    position: fixed;
    inset: 0;
    z-index: 9998;
    background-color: rgb(0 0 0 / 0.5);
    opacity: 0;
    visibility: hidden;
    transition: opacity 0.2s ease, visibility 0.2s ease;
  }
  
  .header-mobile-backdrop.active {
    opacity: 1;
    visibility: visible;
  }
  
  .header-mobile-panel {
    position: fixed;
    top: 0;
    right: 0;
    bottom: 0;
    z-index: 9999;
    width: 100%;
    max-width: 20rem;
    overflow-y: auto;
    background-color: var(--color-bg-primary);
    padding: 1.25rem 1.5rem;
    border-left: 1px solid var(--color-border);
    box-shadow: var(--shadow-lg);
    display: flex;
    flex-direction: column;
    transform: translateX(100%);
    transition: transform 0.3s ease;
  }
  
  .header-mobile-panel.active {
    transform: translateX(0);
  }
  
  .header-mobile-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
  }
  
  .header-close-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 0.5rem;
    border-radius: 0.5rem;
    color: var(--color-text-secondary);
    transition: all 0.2s ease;
    background: transparent;
    border: none;
    cursor: pointer;
  }
  
  .header-close-btn:hover {
    color: var(--color-text-primary);
    background-color: var(--color-bg-tertiary);
  }
  
  .header-mobile-nav {
    margin-top: 2rem;
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
    flex: 1;
  }
  
  .header-mobile-link {
    display: block;
    padding: 0.875rem 1rem;
    border-radius: 0.5rem;
    font-weight: 600;
    color: var(--color-text-secondary);
    text-decoration: none;
    transition: all 0.2s ease;
  }
  
  .header-mobile-link:hover {
    color: var(--color-text-primary);
    background-color: var(--color-bg-tertiary);
  }
  
  .header-mobile-cta {
    background-color: var(--color-cta);
    color: #ffffff !important;
    text-align: center;
    margin-top: 0.5rem;
  }
  
  .header-mobile-cta:hover {
    background-color: var(--color-cta-hover);
    color: #ffffff !important;
  }
  
  .header-mobile-active {
    color: var(--color-accent);
    background-color: var(--color-accent-bg);
  }
  
  .header-mobile-footer {
    margin-top: auto;
    padding-top: 1.5rem;
    border-top: 1px solid var(--color-border);
  }
  
  .header-mobile-phone {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    padding: 0.875rem 1rem;
    border-radius: 0.5rem;
    background-color: var(--color-accent);
    color: #ffffff;
    font-weight: 600;
    text-decoration: none;
    transition: background-color 0.2s ease;
  }
  
  .header-mobile-phone:hover {
    background-color: var(--color-accent-hover);
  }
</style>

<script>
  // Mobile menu handler - works with View Transitions
  // Use a global controller to prevent duplicate listeners
  (function() {
    let controller: AbortController | null = null;
    
    function initMobileMenu() {
      // Abort any previous listeners
      if (controller) {
        controller.abort();
      }
      controller = new AbortController();
      const signal = controller.signal;
      
      const menuBtn = document.querySelector('.header-menu-btn') as HTMLElement | null;
      const closeBtn = document.querySelector('.header-close-btn') as HTMLElement | null;
      const backdrop = document.querySelector('.header-mobile-backdrop') as HTMLElement | null;
      const panel = document.querySelector('.header-mobile-panel') as HTMLElement | null;
      const mobileLinks = document.querySelectorAll('.header-mobile-link');
      const logoLink = document.querySelector('.header-mobile-header .header-logo') as HTMLElement | null;
      
      // Ensure menu is closed on init
      backdrop?.classList.remove('active');
      panel?.classList.remove('active');
      document.body.style.overflow = '';
      
      function openMenu() {
        if (backdrop && panel) {
          backdrop.classList.add('active');
          panel.classList.add('active');
          document.body.style.overflow = 'hidden';
          menuBtn?.setAttribute('aria-expanded', 'true');
        }
      }
      
      function closeMenu() {
        if (backdrop && panel) {
          backdrop.classList.remove('active');
          panel.classList.remove('active');
          document.body.style.overflow = '';
          menuBtn?.setAttribute('aria-expanded', 'false');
        }
      }
      
      // Attach listeners with abort signal to prevent duplicates
      menuBtn?.addEventListener('click', openMenu, { signal });
      closeBtn?.addEventListener('click', closeMenu, { signal });
      backdrop?.addEventListener('click', closeMenu, { signal });
      logoLink?.addEventListener('click', closeMenu, { signal });
      mobileLinks.forEach(link => link.addEventListener('click', closeMenu, { signal }));
      
      // Close on escape
      document.addEventListener('keydown', (e) => {
        if (e.key === 'Escape') closeMenu();
      }, { signal });
    }
    
    // Close menu before page swap to prevent stuck state
    document.addEventListener('astro:before-swap', () => {
      const backdrop = document.querySelector('.header-mobile-backdrop');
      const panel = document.querySelector('.header-mobile-panel');
      backdrop?.classList.remove('active');
      panel?.classList.remove('active');
      document.body.style.overflow = '';
    });
    
    // Initialize on page load and after View Transitions
    document.addEventListener('astro:page-load', initMobileMenu);
  })();
</script>
