---
interface Props {
	id?: string;
	class?: string;
	contain?: boolean;
	padding?: "sm" | "md" | "lg" | "none";
}

const { id, class: className, contain = true, padding = "lg" } = Astro.props;

const paddingClasses = {
	none: "",
	sm: "py-8 md:py-12",
	md: "py-12 md:py-20",
	lg: "py-16 md:py-24 lg:py-32"
};
---

<section id={id} class={className}>
	<div class:list={[
		contain && "container",
		paddingClasses[padding]
	]}>
		<slot />
	</div>
</section>
