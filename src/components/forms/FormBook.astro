<form action="#" class="space-y-6">
  <div class="grid gap-6 sm:grid-cols-2">
    <div class="space-y-2">
      <label for="name">Name</label>
      <input type="text" name="name" id="name" required placeholder="Your full name" />
    </div>
    <div class="space-y-2">
      <label for="email">Email</label>
      <input type="email" name="email" id="email" required placeholder="you@example.com" />
    </div>
    <div class="space-y-2">
      <label for="phone">Phone</label>
      <input type="text" name="phone" id="phone" required placeholder={"(435) 555-5555"} />
      <small>We'll text you to confirm your reservation.</small>
    </div>
    <div class="space-y-2">
      <label for="date">Date &amp; Time</label>
      <input type="datetime-local" name="date" id="date" required />
      <small>Our concierge will offer alternatives if your slot is taken.</small>
    </div>
  </div>
  <div class="space-y-2">
    <label for="message">Notes</label>
    <textarea
      name="message"
      id="message"
      rows="4"
      placeholder="Let us know about celebrations, allergies, or seating preferences"
      required
    ></textarea>
  </div>
  <button type="submit" class="button button-primary w-full justify-center text-xs uppercase tracking-[0.3em]">
    Request reservation
  </button>
</form>
