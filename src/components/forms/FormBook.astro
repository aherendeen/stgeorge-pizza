---
import { Icon } from "astro-icon/components";
---

<form action="#">
	<div class="flex flex-col gap-8 mx-auto max-w-md">
		<div>
			<label for="name" class="text-primary">Name</label>
			<div class="mt-2">
				<input type="text" name="name" id="name" required />
			</div>
		</div>

		<div>
			<label for="email" class="text-primary">Email</label>
			<div class="mt-2 grid grid-cols-1">
				<input type="email" name="email" id="email" required />
			</div>
		</div>

		<div>
			<label for="phone" class="text-primary">Phone</label>
			<div class="mt-2">
				<input type="text" name="phone" id="phone" required />
			</div>
			<small class="italic text-muted">We will call you to confirm your reservation</small>
		</div>

		<div>
			<label for="date" class="text-primary">Date & Time</label>
			<div class="mt-2">
				<input type="datetime-local" name="date" id="date" required />
			</div>
			<small class="italic text-muted"
				>We cannot guarantee availability at the chosen time and date, but will look for the closest opening</small
			>
		</div>

		<div>
			<label for="message" class="text-primary">Notes</label>
			<div class="mt-2">
				<textarea
					name="message"
					id="message"
					rows="4"
					required
					placeholder="Let us know if you have any allergies, or have a specific table in mind"></textarea>
			</div>
		</div>

		<div>
			<button type="submit" class="button button-primary group !px-8">
				<Icon 
					name="lucide:send" 
					class="size-4 -rotate-45 -mt-0.5 inline-block mr-2 group-hover:rotate-0 transition duration-300" 
				/>
				Send
			</button>
		</div>
	</div>
</form>
