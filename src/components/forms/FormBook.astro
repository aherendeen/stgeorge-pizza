---
import { Icon } from "astro-icon/components";
---

<form class="space-y-5 mx-auto max-w-md" data-form="booking">
	<div class="grid grid-cols-1 sm:grid-cols-2 gap-5">
		<div>
			<label for="book-name" class="form-label">Name</label>
			<input type="text" name="name" id="book-name" autocomplete="name" required />
		</div>
		<div>
			<label for="book-phone" class="form-label">Phone</label>
			<input type="tel" name="phone" id="book-phone" autocomplete="tel" required />
		</div>
	</div>

	<div>
		<label for="book-email" class="form-label">Email</label>
		<input type="email" name="email" id="book-email" autocomplete="email" required />
	</div>

	<div class="grid grid-cols-1 sm:grid-cols-2 gap-5">
		<div>
			<label for="book-date" class="form-label">Date & Time</label>
			<input type="datetime-local" name="date" id="book-date" required />
		</div>
		<div>
			<label for="book-guests" class="form-label">Party Size</label>
			<select name="guests" id="book-guests" required>
				<option value="">Select...</option>
				<option value="1">1 person</option>
				<option value="2">2 people</option>
				<option value="3">3 people</option>
				<option value="4">4 people</option>
				<option value="5">5 people</option>
				<option value="6">6 people</option>
				<option value="7+">7+ people</option>
			</select>
		</div>
	</div>

	<div>
		<label for="book-notes" class="form-label">Special Requests <span class="text-muted font-normal">(optional)</span></label>
		<textarea
			name="notes"
			id="book-notes"
			rows="3"
			placeholder="Allergies, dietary restrictions, seating preferences..."
		></textarea>
	</div>

	<p class="text-xs text-muted">We'll call to confirm your reservation. Walk-ins also welcome.</p>

	<div>
		<button type="submit" class="button button-primary w-full">
			<Icon name="lucide:calendar-check" class="size-4" aria-hidden="true" />
			Request Reservation
		</button>
	</div>
</form>
