---
import { Icon } from "astro-icon/components";
---

<form action="#" class="space-y-6 mx-auto max-w-md">
	<div>
		<label for="name" class="block text-sm font-medium text-primary mb-2">Name</label>
		<input type="text" name="name" id="name" autocomplete="name" required />
	</div>

	<div>
		<label for="email" class="block text-sm font-medium text-primary mb-2">Email</label>
		<input type="email" name="email" id="email" autocomplete="email" required />
	</div>

	<div>
		<label for="phone" class="block text-sm font-medium text-primary mb-2">Phone</label>
		<input type="tel" name="phone" id="phone" autocomplete="tel" required />
		<p class="mt-1.5 text-sm text-muted">We will call you to confirm your reservation</p>
	</div>

	<div>
		<label for="date" class="block text-sm font-medium text-primary mb-2">Date & Time</label>
		<input type="datetime-local" name="date" id="date" required />
		<p class="mt-1.5 text-sm text-muted">We cannot guarantee availability at the chosen time, but will find the closest opening</p>
	</div>

	<div>
		<label for="guests" class="block text-sm font-medium text-primary mb-2">Number of Guests</label>
		<select name="guests" id="guests" required>
			<option value="">Select party size</option>
			<option value="1">1 person</option>
			<option value="2">2 people</option>
			<option value="3">3 people</option>
			<option value="4">4 people</option>
			<option value="5">5 people</option>
			<option value="6">6 people</option>
			<option value="7+">7+ people (large party)</option>
		</select>
	</div>

	<div>
		<label for="message" class="block text-sm font-medium text-primary mb-2">Special Requests</label>
		<textarea
			name="message"
			id="message"
			rows="3"
			placeholder="Allergies, dietary restrictions, seating preferences..."
		></textarea>
	</div>

	<div class="pt-2">
		<button type="submit" class="button button-primary w-full group">
			<Icon 
				name="lucide:calendar-check" 
				class="size-4 inline-block mr-2 group-hover:scale-110 transition-transform duration-300" 
			/>
			Request Reservation
		</button>
	</div>
</form>
