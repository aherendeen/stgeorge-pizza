---
import "../styles/global.css";
import { ClientRouter } from "astro:transitions";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { siteLang, siteName, siteDomain } from "../data/config";

const { pageTitle, title, description } = Astro.props;
const baseUrl = `https://${siteDomain}`;
const fullTitle = pageTitle ? `${pageTitle} | ${siteName}` : siteName;
---

<!doctype html>
<html lang={siteLang} class="scroll-smooth">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="theme-color" content="#09090b" media="(prefers-color-scheme: dark)" />
    <meta name="theme-color" content="#ffffff" media="(prefers-color-scheme: light)" />
    <meta name="description" content={description || `${siteName} - Authentic Italian cuisine in St. George, Utah`} />
    <meta name="robots" content="index,follow" />
    <meta name="googlebot" content="index,follow" />
    <link rel="author" href="humans.txt" />
    <link rel="canonical" href={`${baseUrl}${Astro.url.pathname}`} />
    <meta name="msapplication-TileColor" content="#10b981" />

    <!-- Open Graph -->
    <meta property="og:url" content={`${baseUrl}${Astro.url.pathname}`} />
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title || fullTitle} />
    <meta property="og:image" content={`${baseUrl}/images/og-image.jpg`} />
    <meta property="og:description" content={description || `${siteName} - Authentic Italian cuisine in St. George, Utah`} />
    <meta property="og:site_name" content={siteName} />
    <meta property="og:locale" content={siteLang} />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:url" content={`${baseUrl}${Astro.url.pathname}`} />
    <meta name="twitter:title" content={title || fullTitle} />
    <meta name="twitter:description" content={description || `${siteName} - Authentic Italian cuisine in St. George, Utah`} />
    
    <title>{fullTitle}</title>
    <ClientRouter />
    
    <!-- Prevent flash of wrong theme -->
    <script is:inline>
      (function() {
        const stored = localStorage.getItem('theme');
        const prefersDark = window.matchMedia('(prefers-color-scheme: dark)').matches;
        if (stored === 'dark' || (!stored && prefersDark)) {
          document.documentElement.classList.add('dark');
        }
      })();
    </script>
  </head>
  <body class="min-h-screen flex flex-col bg-primary">
    <Header />
    <main class="flex-1">
      <slot />
    </main>
    <Footer />
  </body>
</html>
