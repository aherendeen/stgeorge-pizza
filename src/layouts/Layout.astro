---
import "../styles/global.css";
import { ClientRouter } from "astro:transitions";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { siteLang, themeColor, siteName, siteSlogan } from "../data/config";

const {
  pageTitle = siteName,
  title = siteName,
  description = siteSlogan,
  structuredData,
} = Astro.props;

const canonical = `${Astro.url.protocol}//${Astro.url.host}${Astro.url.pathname}`;
---

<!doctype html>
<html lang={siteLang} class="bg-[var(--color-cloud)]">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <meta name="theme-color" content={themeColor} />
    <meta name="robots" content="index,follow" />
    <meta property="og:type" content="website" />
    <meta property="og:site_name" content={siteName} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={canonical} />
    <link rel="canonical" href={canonical} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Fraunces:wght@600;700;800&family=Manrope:wght@400;500;600;700&display=swap"
    />
    <title>{pageTitle}</title>
    {structuredData && (
      <script is:inline type="application/ld+json" set:html={JSON.stringify(structuredData)} />
    )}
    <ClientRouter />
  </head>
  <body class="min-h-screen bg-transparent">
    <Header />
    <main class="pb-24">
      <slot />
    </main>
    <Footer />
  </body>
</html>
