---
import Layout from "../layouts/Layout.astro";
---
<Layout pageTitle="Page not found">
  <section aria-labelledby="not-found">
    <div class="wrap" style="text-align: center; padding-block: var(--space-xl);">
      <p class="eyebrow">404</p>
      <h1 id="not-found">That page is still in the oven.</h1>
      <p>Return to the menu to keep the good stuff coming.</p>
      <p style="margin-top: var(--space-sm);">
        <a class="button-primary" href="/">Back to home</a>
      </p>
    </div>
  </section>
</Layout>
