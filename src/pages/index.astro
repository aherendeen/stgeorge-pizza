---
import Layout from "../layouts/Layout.astro";
import Section from "../components/Section.astro";
import Hero from "../components/Hero.astro";
import Badge from "../components/Badge.astro";
import Button from "../components/Button.astro";
import ButtonCallUs from "../components/ButtonCallUs.astro";
import Card from "../components/Card.astro";
import ReviewSlider from "../components/ReviewSlider.astro";
import { Picture } from "astro:assets";
import { address, phone } from "../data/config";

import PizzaHero from "../assets/images/pizza-hero.png";
import Pizza from "../assets/images/pizza.png";
import Spaghetti from "../assets/images/spaghetti.png";
import Mussels from "../assets/images/mussels2.png";
import DecorativeImage from "../assets/images/pexels-shvetsa-5953523.jpg";
---

<Layout
  pageTitle="St. George Pizza — Wood-fired dining in the desert"
  description="Modern Italian cuisine in St. George, Utah. Reserve a table for wood-fired pizza, handmade pasta, and an unforgettable night."
>
  <Section contain={false} class="relative overflow-hidden">
    <div class="absolute inset-0 -z-10 bg-gradient-to-br from-[rgba(140,30,33,0.18)] via-transparent to-[rgba(31,61,59,0.12)]"></div>
    <div class="container">
      <Hero>
        <div slot="hero-content-left" class="space-y-8">
          <Badge tone="olive" title="Wood-fired cucina" />
          <h1 class="text-balance text-[color:var(--color-ink)]">
            Elevated pizza nights for the people of St. George
          </h1>
          <p class="max-w-xl text-lg text-[rgba(27,29,33,0.72)]">
            Our chefs ferment dough for seventy-two hours, coax flame-kissed char in an Italian oven, and finish every plate with desert-grown herbs. The result: a dining experience that feels indulgent yet effortless.
          </p>
          <div class="flex flex-col gap-3 sm:flex-row sm:items-center">
            <Button url="/book">Book an evening</Button>
            <Button variant="secondary" url="/menu">Browse the menu</Button>
            <ButtonCallUs class="sm:ml-4" />
          </div>
          <dl class="grid gap-6 sm:grid-cols-3 text-sm uppercase tracking-[0.28em] text-[rgba(27,29,33,0.6)]">
            <div class="rounded-3xl bg-white/80 p-4 shadow-[var(--shadow-soft)] ring-1 ring-black/5">
              <dt class="text-xs font-semibold">Since</dt>
              <dd class="mt-2 text-2xl font-semibold text-[color:var(--color-brick)]">1998</dd>
            </div>
            <div class="rounded-3xl bg-white/80 p-4 shadow-[var(--shadow-soft)] ring-1 ring-black/5">
              <dt class="text-xs font-semibold">Reviews</dt>
              <dd class="mt-2 text-2xl font-semibold text-[color:var(--color-brick)]">4.9 ★</dd>
            </div>
            <div class="rounded-3xl bg-white/80 p-4 shadow-[var(--shadow-soft)] ring-1 ring-black/5">
              <dt class="text-xs font-semibold">Delivery</dt>
              <dd class="mt-2 text-2xl font-semibold text-[color:var(--color-brick)]">45 min</dd>
            </div>
          </dl>
        </div>
        <div slot="hero-content-right" class="relative">
          <div class="absolute -top-10 -right-6 hidden h-40 w-40 rounded-full bg-[rgba(242,199,125,0.35)] blur-3xl lg:block"></div>
          <Picture
            class:list={["mx-auto max-w-md rounded-[2.75rem] border-[10px] border-white shadow-[var(--shadow-soft)]"]}
            src={PizzaHero}
            height={640}
            formats={["avif", "webp"]}
            alt="Chef serving pizza fresh from a wood-fired oven"
            loading="eager"
            fetchpriority="high"
          />
          <div class="absolute -bottom-10 left-1/2 hidden w-[19rem] -translate-x-1/2 rounded-3xl bg-white/95 p-5 shadow-[var(--shadow-soft)] ring-1 ring-black/5 lg:block">
            <p class="text-xs font-semibold uppercase tracking-[0.3em] text-[color:var(--color-brick)]">Chef's promise</p>
            <p class="mt-2 text-sm text-[color:var(--color-forest)]">
              Handmade dough, local produce, and nightly specials inspired by the red rock desert.
            </p>
          </div>
        </div>
      </Hero>
    </div>
  </Section>

  <Section>
    <div class="mx-auto max-w-3xl text-center space-y-4">
      <Badge title="The experience" />
      <h2 class="text-balance">An evening that moves at the pace of conversation</h2>
      <p class="text-lg text-[rgba(27,29,33,0.72)]">
        From aperitivo to dolce, we engineer flow with attentive service, curated playlists, and a dining room built for long-form storytelling.
      </p>
    </div>
    <div class="mt-12 grid gap-8 lg:grid-cols-3">
      <Card>
        <h3 class="text-xl font-semibold text-[color:var(--color-forest)]">Live-fire cucina</h3>
        <p class="mt-3 text-[rgba(27,29,33,0.7)]">
          Watch our pizzaioli stretching dough at the chef’s table while flames roar inside our imported Stefano Ferrara oven.
        </p>
      </Card>
      <Card>
        <h3 class="text-xl font-semibold text-[color:var(--color-forest)]">Tableside hospitality</h3>
        <p class="mt-3 text-[rgba(27,29,33,0.7)]">
          Dedicated captains greet guests with chilled towels, offer bespoke wine pairings, and remember your favorite booth.
        </p>
      </Card>
      <Card>
        <h3 class="text-xl font-semibold text-[color:var(--color-forest)]">Desert-driven pantry</h3>
        <p class="mt-3 text-[rgba(27,29,33,0.7)]">
          Utah honey, canyon peaches, and snow canyon basil meet Italian flour, buffalo mozzarella, and Calabrian chiles.
        </p>
      </Card>
    </div>
  </Section>

  <Section class="bg-white/80">
    <div class="grid gap-10 lg:grid-cols-[1.1fr,0.9fr] lg:items-center">
      <div class="space-y-6">
        <Badge tone="olive" title="Signature plates" />
        <h2 class="text-balance">Modern riffs on classics worth obsessing over</h2>
        <p class="text-lg text-[rgba(27,29,33,0.72)]">
          Our most requested dishes showcase the balance between crisp char, silky sauces, and bright seasonal produce.
        </p>
        <ul class="space-y-4 text-[rgba(27,29,33,0.75)]">
          <li class="flex gap-3">
            <span class="mt-1 inline-flex size-2 rounded-full bg-[color:var(--color-brick)]"></span>
            San Pietro Margherita — blistered crust, torn basil, smoked sea salt.
          </li>
          <li class="flex gap-3">
            <span class="mt-1 inline-flex size-2 rounded-full bg-[color:var(--color-brick)]"></span>
            Black truffle tagliatelle — hand-cut pasta, porcini, aged parm.
          </li>
          <li class="flex gap-3">
            <span class="mt-1 inline-flex size-2 rounded-full bg-[color:var(--color-brick)]"></span>
            Coastal fra diavolo — day-boat shellfish, Calabrian heat, charred lemon.
          </li>
        </ul>
        <div class="flex flex-wrap gap-3">
          <Button url="/menu">See the full menu</Button>
          <Button variant="ghost" url="/gallery">Tour the space</Button>
        </div>
      </div>
      <div class="grid gap-6 md:grid-cols-2">
        <Picture
          src={Pizza}
          class:list={["h-full w-full rounded-3xl object-cover shadow-[var(--shadow-soft)]"]}
          alt="Wood-fired margherita pizza"
          formats={["avif", "webp"]}
        />
        <Picture
          src={Spaghetti}
          class:list={["h-full w-full rounded-3xl object-cover shadow-[var(--shadow-soft)]"]}
          alt="Truffle pasta in copper pan"
          formats={["avif", "webp"]}
        />
        <Picture
          src={Mussels}
          class:list={["h-full w-full rounded-3xl object-cover shadow-[var(--shadow-soft)]"]}
          alt="Seafood fra diavolo"
          formats={["avif", "webp"]}
        />
        <Picture
          src={DecorativeImage}
          class:list={["h-full w-full rounded-3xl object-cover shadow-[var(--shadow-soft)]"]}
          alt="Interior of St. George Pizza"
          formats={["avif", "webp"]}
        />
      </div>
    </div>
  </Section>

  <Section>
    <div class="grid gap-16 lg:grid-cols-[0.9fr,1.1fr] lg:items-center">
      <div class="space-y-4">
        <Badge title="The craft" />
        <h2>Made for celebrations, crafted for every night</h2>
        <p class="text-lg text-[rgba(27,29,33,0.72)]">
          Our beverage director builds pairings that echo the terroir of Southern Utah, while our pastry team turns seasonal fruit into decadent finales. Whether it’s a date night or a 20-person celebration, expect intentional pacing and a soundtrack tuned to golden hour.
        </p>
        <div class="rounded-3xl bg-white/90 p-6 shadow-[var(--shadow-soft)] ring-1 ring-black/5">
          <p class="text-sm uppercase tracking-[0.3em] text-[color:var(--color-brick)]">Private dining</p>
          <p class="mt-3 text-[color:var(--color-forest)]">
            Reserve our glass-enclosed garden room for intimate gatherings up to 18 guests. Customized coursed menus available with two weeks’ notice.
          </p>
        </div>
      </div>
      <div class="rounded-[3rem] bg-[rgba(31,61,59,0.08)] p-10">
        <ReviewSlider />
      </div>
    </div>
  </Section>

  <Section class="bg-white">
    <div class="grid gap-12 lg:grid-cols-[1.1fr,0.9fr]">
      <div class="space-y-6">
        <Badge tone="olive" title="Visit" />
        <h2>Find us in the heart of historic downtown</h2>
        <p class="text-lg text-[rgba(27,29,33,0.72)]">
          We’re steps from Town Square Park with valet on weekends. Arrive early for an aperitivo and stay late for espresso and house-made cannoli.
        </p>
        <div class="grid gap-4">
          <div class="rounded-3xl bg-white/90 p-5 shadow-[var(--shadow-soft)] ring-1 ring-black/5">
            <p class="text-xs font-semibold uppercase tracking-[0.3em] text-[color:var(--color-brick)]">Address</p>
            <p class="mt-2 text-[color:var(--color-forest)]">{address.street}, {address.city}, {address.state} {address.zip}</p>
          </div>
          <div class="rounded-3xl bg-white/90 p-5 shadow-[var(--shadow-soft)] ring-1 ring-black/5">
            <p class="text-xs font-semibold uppercase tracking-[0.3em] text-[color:var(--color-brick)]">Reservations</p>
            <p class="mt-2 text-[color:var(--color-forest)]">Call {phone.label} or reserve online.</p>
          </div>
        </div>
        <div class="flex flex-wrap gap-3">
          <Button url="/book">Reserve now</Button>
          <Button variant="ghost" url="/contact">Contact our team</Button>
        </div>
      </div>
      <div class="rounded-[3rem] bg-[rgba(140,30,33,0.1)] p-10">
        <div class="space-y-6 text-[color:var(--color-forest)]">
          <div>
            <p class="text-xs font-semibold uppercase tracking-[0.3em] text-[color:var(--color-brick)]">Hours</p>
            <ul class="mt-3 space-y-2 text-sm text-[rgba(27,29,33,0.75)]">
              <li>Mon–Thu · 11am – 10pm</li>
              <li>Fri–Sat · 11am – 11pm</li>
              <li>Sun · 12pm – 9pm</li>
            </ul>
          </div>
          <div>
            <p class="text-xs font-semibold uppercase tracking-[0.3em] text-[color:var(--color-brick)]">Parking</p>
            <p class="mt-2 text-sm text-[rgba(27,29,33,0.75)]">
              Complimentary valet every evening and validated garage parking across the street.
            </p>
          </div>
        </div>
      </div>
    </div>
  </Section>
</Layout>
